<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFF0"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="中天科技"
            android:textColor="#d7000f"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="201801253652"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="成本：10.53"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stopLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="止损：11"
            android:textColor="#006400"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stopLossRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="1dp"
            android:text="3.0%"
            android:textStyle="bold"
            android:textColor="#006400"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linear_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_name"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高：20"
                android:textColor="#d7000f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_salePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="卖出价格：10"
                android:textColor="#333"
                android:textSize="13sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/linear_01"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rValueFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R->"
                android:textColor="#d7000f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2"
                android:textColor="#d7000f"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_incomeFlag"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="预期收益-> "
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="100%"
                android:textSize="20sp"
                android:textColor="#d7000f"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff"/>
</LinearLayout>