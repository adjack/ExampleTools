<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yuan.lifefinance.tool.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/title_color">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易单"
            android:textSize="15sp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日期："
            android:textColor="#000"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="股票名称"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/shape_bg_style01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="股票代码"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/shape_bg_style01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="买入价格"/>
        <EditText
            android:id="@+id/et_cost"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_bg_style01"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="止损价格"/>
        <EditText
            android:id="@+id/et_stopLoss"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_bg_style01"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="目标价格"/>
        <EditText
            android:id="@+id/et_mostPrice"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:background="@drawable/shape_bg_style01"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:id="@+id/tv_006"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="R比率"/>
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:id="@+id/tv_rValue"
            android:layout_toRightOf="@+id/tv_006"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#d7000f"
            android:textSize="20sp"/>
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:id="@+id/tv_refreshRValue"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:textColor="#000"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:text="刷新"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="预期收益"/>
        <com.yuan.lifefinance.tool.view.MyCustomTextView
            android:id="@+id/tv_income"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:inputType="numberDecimal"
            android:textSize="22sp"
            android:textColor="#d7000f"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:onClick="onclick"
                android:text="生成记录"
                android:textColor="#fff"
                android:background="@drawable/button_style01"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:onClick="onclickSell"
                android:text="出卖股票"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:background="@drawable/button_style01"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:onClick="onclickCompare"
                android:text="个股比较"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_style01"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:onClick="onclickOpenFile"
                android:text="查看文件"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_style01"/>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
