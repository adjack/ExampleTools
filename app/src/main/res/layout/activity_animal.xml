<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="activity.example.yuan.cn.exampletools.AnimalActivity">

    <activity.example.yuan.cn.exampletools.view.CustomView
        android:id="@+id/custom_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#aaa"
            android:gravity="center_horizontal"
            android:text="下拉"
            android:textSize="32sp" />
    </activity.example.yuan.cn.exampletools.view.CustomView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击"
        style="@style/main_menu_style"/>

    <activity.example.yuan.cn.exampletools.view.ScroolView2
        android:id="@+id/myView"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#c1c1c1"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test" />
    </activity.example.yuan.cn.exampletools.view.ScroolView2>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAnim"
        android:text="开始"
        android:visibility="gone" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSlide"
        android:text="切换动画"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="#edee22"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon1" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </FrameLayout>

</FrameLayout>
